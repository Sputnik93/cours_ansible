# mariadb-server version ansible
#
# Version: 1.0

FROM debian:buster
LABEL maintainer="agoethals@henix.fr" Description="Image Debian 10 adaptée à une utilisation par ansible" tag="stretch"

RUN apt update
RUN apt install -y openssh-server python python-pip
RUN service ssh start
RUN mkdir -p /root/.ssh
COPY authorized_keys /root/.ssh/authorized_keys 
